{
  "name": "Foliospace",
  "version": "1.0.0",
  "description": "Portfolio Maker Web Application",

  "repository": {
    "type": "git",
    "url": "https://github.com/foliospace/foliospace"
  },
  "main": "index.js",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server/index.js && node server/bin/www",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server/bin/www",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "author": "Arthur Liou, Andrea Dias, Sharaya Baker",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "babel-loader": "^8.0.5",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "concurrently": "^4.0.1"
  },
  "dependencies": {
    "@okta/okta-sdk-nodejs": "^2.0.0",
    "@okta/okta-signin-widget": "^2.19.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.16.4",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "nodemon": "^1.18.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
